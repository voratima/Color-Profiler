package com.enlighten.utils {	import flash.media.Sound;	import flash.display.MovieClip;	import flash.display.BitmapData;	import flash.display.DisplayObject;	import flash.utils.getDefinitionByName;     public class AssetsManager    {        public static var vars:Object = {};				public static function createAsset($classname:String):DisplayObject {			var c:Class = Class(vars.assets.loaderInfo.applicationDomain.getDefinition($classname));			return new c();		}		public static function createSound($classname:String):Sound {			var c:Class = Class(vars.assets.loaderInfo.applicationDomain.getDefinition($classname));			return new c();		}		public static function createBitmapData($bitmap:String):BitmapData {			var c:Class = Class(vars.assets.loaderInfo.applicationDomain.getDefinition($bitmap));			return new c(0,0);		}		public static function createClassObject($classname:String):* {			var c:Class = Class(getDefinitionByName($classname));			return new c();		}    }}