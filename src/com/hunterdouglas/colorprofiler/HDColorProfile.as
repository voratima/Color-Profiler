package  com.hunterdouglas.colorprofiler{	import flash.display.*;	import flash.events.*;	import flash.geom.Matrix;	import flash.text.*;	import flash.net.URLRequest;		import com.enlighten.common.*;			public class HDColorProfile extends Sprite	{		public var id:int;		private const W:int	= 25;		public function HDColorProfile():void		{		}		public function setContent(_id:int, _xml:XML, _bitmap:Bitmap, _colors:Array):void		{			id				= _id;			swatchID.text	= String(_id);			swatchName.text	= _xml.file;//+"\n"+_xml.width+" x "+_xml.height;						thumb.addChild(_bitmap);						for(var i:int=0; i<_colors.length; i++)			{				//var box:Box	= new Box(W, W, uint("0x"+_colors[i].color.toString(16)), 1);				var box:Box	= new Box(Math.ceil(450*_colors[i].count/(_bitmap.width*_bitmap.height)), W, uint("0x"+_colors[i].color), 1);				//trace("Color: 0x"+_colors[i].color+" ["+_colors[i].count+"]");				if(i>0)					box.x	= colors.width;				colors.addChild(box);			}					}		public function get backgroundHeight():int		{			return W;		}	}}