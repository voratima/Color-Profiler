package  com.hunterdouglas.colorprofiler{	import flash.display.*;	import flash.events.*;	import flash.geom.Matrix;	import flash.text.*;	import flash.net.URLRequest;		import com.enlighten.common.*;	    import com.enlighten.utils.HSV;    import com.enlighten.utils.HSL;	public class HDColorBox extends Sprite	{		public var id:int;		private var box:Box;		private var w:int;		private var h:int;		public var color:String;		public var hsv:HSV;		public var hsl:HSL;		public var count:int;		public var clusters:Array;		public var luma:Number;				public function HDColorBox(_id:int, _color:String, _w:int, _h:int):void		{			id				= _id;			w				= _w;			h				= _h;			color			= _color;			luma			= getLuma(color);			hsv				= HSV.RGB2HSV(_color);			hsl				= HSL.RGB2HSL(_color);			box				= new Box(_w, _h, uint("0x"+_color), 1, 1, 0xFFFFFF, 1);			count			= 0;			clusters		= new Array();			addChild(box);						mouseChildren	= false;			//useHandCursor	= true;			buttonMode		= true;						addEventListener(MouseEvent.ROLL_OVER, handlerRollOver);			addEventListener(MouseEvent.ROLL_OUT, handlerRollOut);		}		private function getLuma(color1:String):Number		{			var r1:uint			= uint("0x"+color1.substr(0, 2));			var g1:uint			= uint("0x"+color1.substr(2, 2));			var b1:uint			= uint("0x"+color1.substr(4, 2));						var l:Number		= 0.3*r1 + 0.59*g1 + 0.11*b1;			trace("\tcolor1: "+color1+" ["+r1+", "+g1+", "+b1+"] -> "+l);			return l;		}		private function handlerRollOver(e:MouseEvent):void		{			box.scaleX		= box.scaleY	= 2;			box.x			= (w-box.width)/2;			box.y			= (h-box.height)/2;		}		private function handlerRollOut(e:MouseEvent):void		{			box.scaleX		= box.scaleY	= 1;			box.x			= 0;			box.y			= 0;		}		public function set enabled(_enabled:Boolean):void		{			if(!_enabled)			{				buttonMode		= false;							removeEventListener(MouseEvent.ROLL_OVER, handlerRollOver);				removeEventListener(MouseEvent.ROLL_OUT, handlerRollOut);			}		}	}}