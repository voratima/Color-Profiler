package com.hunterdouglas.photogallery{	import flash.display.Sprite;	import flash.display.MovieClip;	//import flash.utils.getDefinitionByName;		import com.hunterdouglas.common.Box;		public class HDComboBoxElement extends Sprite {		public var background:Box;		//private var border:Box;				private var paddingW:Number;		private var paddingH:Number;		public function HDComboBoxElement(item:*, _row:uint, _prop:Object):void		{			if(_prop.padding != undefined){				paddingW = paddingH = _prop.padding;			}else{				paddingW = _prop.paddingW;				paddingH = _prop.paddingH;			}			//x = _row * (_prop.w + paddingW*2);						y = _row * (_prop.backgroundHeight + paddingH*2);			//trace(_row+": "+y);			background = new Box(_prop.backgroundWidth + paddingW*2, _prop.backgroundHeight + paddingH*2, _prop.backgroundColor, _prop.backgroundAlpha, _prop.border, _prop.borderColor, _prop.borderAlpha);			addChild(background);						//var content:Box = new Box(_prop.w, _prop.h, 0x990000, 0);			//content.x = paddingW;			//content.y = paddingH;			//background.addChild(content);						//ITEM			item.x = paddingW;			item.y = paddingH;			background.addChild(item);					}		/*		public function get _paddingW():Number		{			return paddingW;		}		public function get _paddingH():Number		{			return paddingH;		}*/		}}