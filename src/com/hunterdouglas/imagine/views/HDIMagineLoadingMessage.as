package com.hunterdouglas.imagine.views{	import flash.display.*;	import flash.events.*;	import flash.text.*;	import com.hunterdouglas.common.*;		public class HDIMagineLoadingMessage extends Sprite	{		var xmlConfig:XMLList;		var css:StyleSheet;		//var loadedObj:Object;		//		private var content:Sprite;		//COMPONENTS		private var component:MovieClip;//LoadingMessageComponent;		private var title:TextField;				public static const LOADING_INTERFACE:String	= "interface";		public static const LOADING_PRODUCT:String		= "product";		public static const LOADING_ROOM:String			= "room";		public static const LOADING_SWATCHES:String		= "swatch";		public static const LOADING_FILTERS:String		= "filter";		public static const LOADING_BANDINGS:String		= "banding";		public static const LOADING_TAPES:String		= "tape";		public static const LOADING_ROOM_SWATCHES:String	= "room_swatch";		public static const LOADING_SWATCH_DATA:String		= "swatch_data";		public static const LOADING:String	= "loading";		public static const RENDERING:String	= "rendering";		public static const FILTERING:String	= "filtering";		public static const SAVING:String		= "saving";		public static const PROCESSING:String	= "processing";				public function HDIMagineLoadingMessage(_css:StyleSheet, _xmlConfig:XMLList = null):void//, _loadedObj:Object=null		{			xmlConfig	= _xmlConfig;			css			= _css;			//loadedObj	= _loadedObj;			//x			= xmlConfig.@x;			//y			= xmlConfig.@y;						content	= new Sprite();			addChild(content);						//component	= new LoadingMessageComponent();			component	= MovieClip(new LoadingMessageComponent());			content.addChild(component);			initText();			hide();		}		private function initText():void		{			title				= new TextField();			title.x				= 5;			title.y				= 1.5;			title.styleSheet	= css;			//title.border		= true;			title.width 		= 100;			title.embedFonts 	= true;			title.multiline		= false;			title.autoSize		= TextFieldAutoSize.LEFT;			title.antiAliasType	= AntiAliasType.ADVANCED;			//title.sharpness	= -200;			//title.thickness	= 100;			title.selectable	= false;						content.addChild(title);		}		public function set message(_key:String):void		{			var str:String	= (xmlConfig!=null)?xmlConfig[_key]:_key;			//trace("MESSAGEEEEEEEEEEE : "+str);			title.htmlText	= '<p class="loadingMessage"><b>'+str+'</b></p>';			component.dots.x	= title.x + title.width + 5;			component.background.width	= component.dots.x + component.dots.width + 8;			content.x		= -content.width/2;			content.y		= -content.height/2;			show();		}		public function show():void		{			component.dots.play();			visible	= true;		}		public function hide():void		{			component.dots.stop();			visible	= false;		}	}}