package com.hunterdouglas.common{	import flash.events.Event;	import flash.display.Loader;	import flash.net.URLRequest;	import flash.net.URLLoader;		import flash.events.EventDispatcher;	import flash.events.Event;		public class HDLoader extends EventDispatcher	{		//private var xml_path:String = "../swfs/xml/gameData.xml";		private var url:String;		private var xml_data:XML;		private var urlLoader:URLLoader;		private var urlRequest:URLRequest;				public function HDLoader(xml_path:String)		{			//trace("HDLoader : xml_path:"+xml_path);			urlRequest = new URLRequest(xml_path);			urlLoader = new URLLoader();			urlLoader.addEventListener(Event.COMPLETE, loadComplete);			urlLoader.load(urlRequest); 		}		private function loadComplete(e:Event):void		{			//trace("loadComplete:");			var xml = new XML(e.target.data);			xml_data = xml;			dispatchEvent(new Event(Event.COMPLETE));		}		public function get data():XML{			return xml_data;		}	}}